    <script>
        // Защита картинок
        document.addEventListener('contextmenu', e => e.target.tagName === 'IMG' && e.preventDefault());
        
        // Сохраняем email
        document.querySelector('input[name="cps_email"]').addEventListener('input', function() {
            localStorage.setItem('school_life_email', this.value);
        });
        const savedEmail = localStorage.getItem('school_life_email');
        if(savedEmail) document.querySelector('input[name="cps_email"]').value = savedEmail;
    </script>

